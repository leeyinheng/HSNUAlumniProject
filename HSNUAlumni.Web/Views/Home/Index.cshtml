<script>

    var person = { firstname: 'test', lastname: 'lastname' };
    var person1 = { firstname: 'henry', lastname: 'lastname' };
    var person2 = { firstname: 'lee', lastname: 'lastname' };
    var person3 = { firstname: 'pig', lastname: 'lastname' };

    var list = [person, person1, person2, person3]; 

    var app = angular.module('myapp', []);

    app.controller('serviceCtrl', function ($scope, $http) {
        $http.get("/api/classmates/618")
        .error(function(error) {
            alert(error); 
        })
        .success(function(response)
        {
            $scope.list = response;
            $scope.myVar = false;
            $scope.toggle = function () {
                $scope.myVar = !$scope.myVar;
            }; 
            
        }
        )
    }); 



    app.controller('myctrl', function ($scope) {
        $scope.firstname = person.firstname;
        $scope.lastname = person.lastname;
        $scope.list = list; 
    });



</script>