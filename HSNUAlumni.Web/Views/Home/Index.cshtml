    <div ng-app="myapp" ng-controller="serviceCtrl">

        <button ng-click="toggle()">Toggle</button>
        
        <p ng-hide="myVar"><input type="text" ng-model="test"></p>
        
        <table>
            <tr ng-repeat="x in list">
